!!! 5
%html{ :lang => "en" }
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= 'DevBoard'

    = stylesheet_link_tag "application"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tag

  %body
    = render partial: 'top_bar'

    .callout.primary
      %h5
        = image_tag('GitHub-Mark-32px.png', class: 'github-logo')
        = image_tag('GitHub_Logo.png', class: 'github-text')
      = yield
